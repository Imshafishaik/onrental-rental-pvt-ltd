<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onriderentals.controller.ForgotPasswordController" alignment="CENTER" spacing="30" styleClass="root" stylesheets="@styles.css" style="-fx-background-color: #f5f5f5;">
    <children>
        <!-- Card Container -->
        <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 40; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);" maxWidth="400">
            
            <!-- Header -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Forgot Password" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Label text="Enter your email to reset your password" style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
            </VBox>
            
            <!-- Email Input -->
            <VBox spacing="8">
                <Label text="Email Address" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TextField fx:id="emailField" promptText="Enter your registered email" style="-fx-padding: 12; -fx-font-size: 14px; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5;"/>
            </VBox>
            
            <!-- Submit Button -->
            <Button fx:id="submitButton" text="Send Reset Link" onAction="#handleSubmit" style="-fx-padding: 12; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #007bff; -fx-text-fill: white; -fx-border-radius: 5; -fx-cursor: hand;"/>
            
            <!-- Divider -->
            <Region prefHeight="1" style="-fx-background-color: #eee;"/>
            
            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Remember your password?" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                <Hyperlink text="Back to Login" onAction="#handleBackToLogin" style="-fx-font-size: 12px; -fx-padding: 0;"/>
            </HBox>
            
            <!-- Info Message -->
            <VBox style="-fx-background-color: #e7f3ff; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #b3d9ff;">
                <Label text="We'll send a password reset link to your email. The link will expire in 1 hour." style="-fx-font-size: 12px; -fx-text-fill: #004085; -fx-wrap-text: true;"/>
            </VBox>
        </VBox>
    </children>
    <padding>
        <Insets top="50" bottom="50" left="20" right="20"/>
    </padding>
</VBox>
