<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onriderentals.controller.ResetPasswordController">
    <VBox styleClass="stat-card" spacing="15" style="-fx-padding: 30; -fx-border-radius: 10; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <Label text="Reset Password" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>
        
        <Label text="Enter your new password" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
        
        <Separator/>
        
        <VBox spacing="8">
            <Label text="New Password" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
            <PasswordField fx:id="newPasswordField" promptText="Enter new password" style="-fx-font-size: 14; -fx-padding: 10; -fx-control-inner-background: #f8f9fa;"/>
        </VBox>
        
        <VBox spacing="8">
            <Label text="Confirm Password" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" style="-fx-font-size: 14; -fx-padding: 10; -fx-control-inner-background: #f8f9fa;"/>
        </VBox>
        
        <Label text="Password must be at least 6 characters long" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
        
        <Button fx:id="resetButton" text="Reset Password" onAction="#handleResetPassword" style="-fx-font-size: 14; -fx-padding: 10 20; -fx-background-color: #007bff; -fx-text-fill: white; -fx-cursor: hand;"/>
        
        <Button fx:id="backButton" text="Back to Login" onAction="#handleBackToLogin" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #6c757d; -fx-text-fill: white; -fx-cursor: hand;"/>
        
    </VBox>
</VBox>
