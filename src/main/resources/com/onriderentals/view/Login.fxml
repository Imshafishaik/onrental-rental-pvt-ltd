<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onriderentals.controller.LoginController" styleClass="root" stylesheets="@styles.css">
    
    <fx:include source="Navbar.fxml"/>
    
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS" style="-fx-background-color: #f1f3f9;">
        <children>
            <!-- Left Side: Branding/Illustration area -->
            <VBox alignment="CENTER" spacing="30" prefWidth="450" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2); -fx-padding: 60;">
                <children>
                    <Label text="OnRide" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <Label text="Your Journey Starts Here." style="-fx-font-size: 24px; -fx-text-fill: rgba(255,255,255,0.8);" />
                    <Region VBox.vgrow="ALWAYS" />
                    <VBox spacing="10">
                        <Label text="✓ Premium Vehicles" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                        <Label text="✓ Seamless Booking" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                        <Label text="✓ 24/7 Support" style="-fx-text-fill: white; -fx-font-size: 16px;" />
                    </VBox>
                </children>
            </VBox>

            <!-- Right Side: Login Form -->
            <VBox alignment="CENTER" spacing="30" prefWidth="450" style="-fx-padding: 60; -fx-background-color: white;">
                <children>
                    <VBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Welcome Back" styleClass="label-title" style="-fx-font-size: 32px;" />
                        <Label text="Please enter your credentials to continue" styleClass="label-subtitle" />
                    </VBox>

                    <VBox spacing="15">
                        <children>
                            <VBox spacing="5" styleClass="text-field-container">
                                <Label text="Email Address" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #636e72;" />
                                <TextField fx:id="emailField" promptText="Enter your email" />
                            </VBox>
                            
                            <VBox spacing="5" styleClass="text-field-container">
                                <Label text="Password" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #636e72;" />
                                <PasswordField fx:id="passwordField" promptText="Enter your password" />
                            </VBox>
                        </children>
                    </VBox>

                    <Label fx:id="messageLabel" style="-fx-text-fill: #ff6b6b; -fx-font-weight: bold;" />

                    <VBox spacing="15">
                        <Button fx:id="loginButton" onAction="#login" text="Sign In" maxWidth="Infinity" styleClass="button-primary" style="-fx-padding: 15;" />
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Forgot your password?" styleClass="label-subtitle" />
                            <Button onAction="#goToForgotPassword" text="Reset it here" styleClass="button-ghost" style="-fx-padding: 0; -fx-font-weight: bold;" />
                        </HBox>
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Don't have an account?" styleClass="label-subtitle" />
                            <Button onAction="#goToRegister" text="Create Account" styleClass="button-ghost" style="-fx-padding: 0; -fx-font-weight: bold;" />
                        </HBox>
                    </VBox>
                </children>
            </VBox>
        </children>
    </HBox>
</VBox>