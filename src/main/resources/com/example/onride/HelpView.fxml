<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox alignment="TOP_LEFT" spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onride.controller.HelpViewController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label styleClass="section-title" text="Help &amp; Support" />

    <VBox spacing="10">
        <Label style="-fx-font-weight: bold;" text="Frequently Asked Questions" />
        <TextFlow>
            <Text style="-fx-font-weight: bold;" text="Q: How do I book a vehicle?" />
            <Text text="\nA: Navigate to the 'Vehicles' section, browse through the available vehicles, and click the 'Book Now' button. You will be guided through the payment process." />
        </TextFlow>
        <TextFlow>
            <Text style="-fx-font-weight: bold;" text="Q: Can I cancel a booking?" />
            <Text text="\nA: Yes, you can cancel a booking from the 'My Bookings' section. Please note that cancellations may be subject to a fee depending on the timing." />
        </TextFlow>
        <TextFlow>
            <Text style="-fx-font-weight: bold;" text="Q: How do I host my own vehicle?" />
            <Text text="\nA: Go to the 'Host a Vehicle' section, fill in the required details about your vehicle, and submit it for review. Once approved, your vehicle will be listed for rent." />
        </TextFlow>
    </VBox>

    <VBox spacing="10">
        <Label style="-fx-font-weight: bold;" text="Contact Information" />
        <Text text="Email: support@onride.com" />
        <Text text="Phone: +1 (800) 123-4567" />
    </VBox>

    <Button onAction="#handleContactSupportAction" text="Contact Support" />

</VBox>
