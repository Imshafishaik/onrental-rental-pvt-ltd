<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onride.controller.AdminViewController">
    <top>
        <VBox styleClass="header">
            <children>
                <Label styleClass="title" text="OnRide" />
                <Label styleClass="subtitle" text="Administrator Dashboard" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="section-title" text="Dashboard" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox styleClass="summary-card">
                            <children>
                                <Label styleClass="summary-title" text="Total Users" />
                                <Label fx:id="totalUsersLabel" styleClass="summary-value" text="0" />
                            </children>
                        </VBox>
                        <VBox styleClass="summary-card">
                            <children>
                                <Label styleClass="summary-title" text="Total Rides" />
                                <Label fx:id="totalRidesLabel" styleClass="summary-value" text="0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <TabPane prefHeight="400.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Users">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <TableView fx:id="usersTable" prefHeight="300.0" prefWidth="780.0" />
                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <padding>
                                                <Insets top="10.0" />
                                            </padding>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Vehicles">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <TableView fx:id="vehiclesTable" prefHeight="300.0" prefWidth="780.0" />
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Bookings">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <TableView fx:id="bookingsTable" prefHeight="300.0" prefWidth="780.0" />
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Payments">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="200.0">
                                    <children>
                                        <TableView fx:id="paymentsTable" prefHeight="300.0" prefWidth="780.0" />
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
