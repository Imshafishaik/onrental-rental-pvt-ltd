<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onride.controller.VehicleCardController">
    <ImageView fx:id="vehicleImageView" fitHeight="150" fitWidth="200" pickOnBounds="true" preserveRatio="true" />
    <Label fx:id="vehicleNameLabel" style="-fx-font-weight: bold;" />
    <Label fx:id="priceLabel" />
    <Button fx:id="bookButton" text="Book Now" onAction="#handleBookAction" />
</VBox>
