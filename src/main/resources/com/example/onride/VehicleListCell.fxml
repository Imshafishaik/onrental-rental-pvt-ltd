<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="hBox" alignment="CENTER_LEFT" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <ImageView fx:id="vehicleImageView" fitHeight="100" fitWidth="150" pickOnBounds="true" preserveRatio="true" />
    <VBox spacing="5">
        <Label fx:id="vehicleNameLabel" style="-fx-font-weight: bold;" text="Vehicle Name" />
        <Label fx:id="vehicleTypeLabel" text="Vehicle Type" />
        <Label fx:id="priceLabel" text="$0.00/hr" />
        <Label fx:id="availabilityLabel" text="Available" />
    </VBox>
    <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
        <Button fx:id="bookNowButton" text="Book Now" />
    </HBox>
</HBox>
