<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.onride.controller.VehiclesViewController"
            stylesheets="@vehicle.css"
            styleClass="vehicles-root">

    <!-- HEADER -->
    <top>
        <VBox spacing="10" styleClass="page-header">
            <Label text="Browse Vehicles" styleClass="page-title"/>
            <Label text="Explore our extensive collection of premium bikes and cars."
                   styleClass="page-subtitle"/>
        </VBox>
    </top>

    <!-- CONTENT -->
    <center>
        <HBox spacing="30">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- FILTERS -->
            <VBox spacing="20" styleClass="filter-panel">
                <Label text="Filters" styleClass="filter-title"/>

                <VBox spacing="8">
                    <Label text="Location" styleClass="filter-label"/>
                    <ComboBox promptText="All Locations"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Vehicle Type" styleClass="filter-label"/>
                    <HBox spacing="10">
                        <ToggleButton text="All" selected="true"/>
                        <ToggleButton text="Bikes"/>
                        <ToggleButton text="Cars"/>
                    </HBox>
                </VBox>

                <VBox spacing="8">
                    <Label text="Price Range" styleClass="filter-label"/>
                    <Slider min="0" max="500" value="250"/>
                </VBox>
            </VBox>

            <!-- VEHICLES -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
               <content>
                  <FlowPane fx:id="vehicleGrid"
                              hgap="25"
                              vgap="25"
                              prefWrapLength="900"/>
               </content>
            </ScrollPane>

        </HBox>
    </center>

</BorderPane>
