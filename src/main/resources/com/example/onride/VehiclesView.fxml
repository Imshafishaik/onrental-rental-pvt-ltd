<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.onride.controller.VehiclesViewController">
   <top>
      <VBox spacing="10">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="searchField" promptText="Search vehicles..." HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="filterCombo" promptText="Filter by type" />
            <ComboBox fx:id="sortCombo" promptText="Sort by price" />
             <Button text="Host a Vehicle" onAction="#handleHostVehicleAction"/>
         </HBox>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true">
         <GridPane fx:id="vehicleGrid" hgap="10" vgap="10">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
         </GridPane>
      </ScrollPane>
   </center>
</BorderPane>
