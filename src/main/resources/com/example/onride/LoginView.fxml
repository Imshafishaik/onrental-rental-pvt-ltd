        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="navbar">
         <padding>
                <Insets top="15" right="10" bottom="15" left="30"/>
            </padding>
            <Label text="ðŸš— OnRide" styleClass="logo"/>

            <Region HBox.hgrow="ALWAYS" maxWidth="950" /> <!-- optional, but we'll limit width -->

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Home" styleClass="nav-link"/>
                <Button text="Vehicles" styleClass="nav-link"/>
                <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Login" styleClass="nav-link"/>
                <Button text="Get Started" styleClass="cta-button"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20"
              maxWidth="420"
              styleClass="login-card">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Logo -->
            <Label text="ðŸš— Onride Rental" styleClass="logo"/>

            <!-- Tabs -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" styleClass="tab-active"/>
                <Button text="Sign Up" styleClass="tab"/>
            </HBox>

            <!-- Headings -->
            <Label text="Welcome back" styleClass="title"/>
            <Label text="Sign in to access your dashboard" styleClass="subtitle"/>

            <!-- Email -->
            <VBox spacing="5">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField"
                           promptText="you@example.com"
                           styleClass="input"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="5">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                               styleClass="input"/>
            </VBox>

            <!-- Sign In -->
            <Button text="Sign In"
                    onAction="#handleSignInButtonAction"
                    styleClass="primary-button"
                    maxWidth="Infinity"/>

            <!-- Links -->
            <HBox spacing="8" alignment="CENTER">
                <Hyperlink text="Forgot password?"
                           onAction="#handleForgotPasswordLinkAction"/>
                <Label text="|" styleClass="divider"/>
                <Hyperlink text="Sign Up"
                           onAction="#handleSignUpLinkAction"/>
            </HBox>

            <!-- Demo Accounts -->
            <VBox spacing="5" styleClass="demo-box">
                <Label text="Demo accounts:" styleClass="demo-title"/>
                <Label text="Admin: admin@demo.com / admin123"/>
                <Label text="Renter: renter@demo.com / renter123"/>
                <Label text="Customer: customer@demo.com / customer123"/>
            </VBox>

        </VBox>
    </center>
