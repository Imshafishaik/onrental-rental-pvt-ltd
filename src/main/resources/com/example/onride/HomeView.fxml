        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="navbar">
         <padding>
                <Insets top="15" right="10" bottom="15" left="30"/>
            </padding>
            <Label text="ðŸš— OnRide" styleClass="logo"/>

            <Region HBox.hgrow="ALWAYS" maxWidth="950" /> <!-- optional, but we'll limit width -->

            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Home" styleClass="nav-link"/>
                <Button text="Vehicles" styleClass="nav-link"/>
                <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="Login" styleClass="nav-link"/>
                <Button text="Get Started" styleClass="cta-button"/>
            </HBox>
        </HBox>
    </top>

    <!-- ================= HERO SECTION ================= -->
    <center>
        <StackPane fx:id="heroStack"
           alignment="CENTER_LEFT"
           styleClass="hero-section">

             <ImageView fx:id="heroImage"
           preserveRatio="false"
           smooth="true"
           mouseTransparent="true"
           pickOnBounds="true">
                <image>
                    <Image url="@../../../images/HeroSection.jpeg"/>
                </image>
            </ImageView>
            <!-- IMAGE PLACEHOLDER (add ImageView later) -->
            <!-- <Region styleClass="hero-bg"/> -->

            <!-- DARK OVERLAY -->
            <Region styleClass="hero-overlay"/>

            <!-- CONTENT -->
            <VBox alignment="CENTER_LEFT"
                  maxWidth="900"
                  styleClass="hero-content">

                <Label text="Premium Vehicle Rentals"
                       styleClass="badge"/>

                <VBox spacing="10">
                    <Label text="Drive Your Dreams"
                           styleClass="hero-title"/>
                    <Label text="Rent with Ease"
                           styleClass="hero-title-secondary"/>
                </VBox>

                <Label text="Experience premium bikes and cars at your fingertips. Book instantly, ride freely, and explore without limits."
                       wrapText="true"
                       maxWidth="600"
                       styleClass="hero-subtitle"/>

                <!-- SEARCH CARD -->
                <HBox spacing="15" alignment="CENTER_LEFT"
                      styleClass="search-card">

                    <TextField promptText="Enter city"
                               styleClass="search-input"/>

                    <DatePicker promptText="Pick-up"
                                styleClass="search-input"/>

                    <DatePicker promptText="Return"
                                styleClass="search-input"/>

                    <Button text="Search"
                            styleClass="search-button"/>
                </HBox>

                <!-- STATS -->
                <HBox spacing="40" alignment="CENTER_LEFT">
                    <VBox>
                        <Label text="500+" styleClass="stat-number"/>
                        <Label text="Vehicles" styleClass="stat-label"/>
                    </VBox>
                    <VBox>
                        <Label text="10K+" styleClass="stat-number"/>
                        <Label text="Happy Customers" styleClass="stat-label"/>
                    </VBox>
                    <VBox>
                        <Label text="50+" styleClass="stat-number"/>
                        <Label text="Locations" styleClass="stat-label"/>
                    </VBox>
                </HBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>


